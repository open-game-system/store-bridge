{
  "name": "@open-game-system/store-bridge",
  "version": "0.1.0",
  "description": "A universal bridge for web games and the OpenGame App.",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": ["src", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsc",
    "check:all": "npm run ci:full",
    "check:formatting": "npx @biomejs/biome format .",
    "ci": "npm run ci:core",
    "ci:core": "npm run format && npm run lint && npm run typecheck && npm run test",
    "ci:full": "npm run ci:core",
    "dev": "tsc -w",
    "format": "npx @biomejs/biome format . --write",
    "lint": "npx @biomejs/biome check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    "./client": "./src/client/index.ts",
    "./native": "./src/native/index.ts",
    "./react": "./src/react/index.ts",
    "./testing": "./src/testing/index.ts",
    "./utils": "./src/utils/index.ts",
    "./types": "./src/types/index.ts"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.21",
    "@types/react-native": "^0.73.0",
    "@vitejs/plugin-react": "^4.2.1",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "vitest": "^3.0.9"
  },
  "keywords": ["bridge", "store", "state", "webview", "game", "react", "react-native"],
  "author": "OpenGame System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-game-system/store-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/open-game-system/store-bridge/issues"
  },
  "homepage": "https://github.com/open-game-system/store-bridge#readme",
  "dependencies": {
    "fast-json-patch": "^3.1.1"
  }
}
