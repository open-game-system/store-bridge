{
  "name": "@open-game-system/store-bridge",
  "version": "0.1.0",
  "description": "A universal bridge that connects web games and the OpenGame App through a shared state store.",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "biome lint ./src",
    "lint:fix": "biome check --apply ./src",
    "format": "biome format --write ./src",
    "check": "biome check --apply ./src",
    "typecheck": "tsc --noEmit",
    "typecheck:examples": "tsc --project examples/web-vite-app/tsconfig.json --noEmit && tsc --project examples/native-expo-app/tsconfig.json --noEmit",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare:examples:web": "cd examples/web-vite-app && pnpm install",
    "prepare:examples:native": "cd examples/native-expo-app && pnpm install",
    "prepare:examples": "pnpm prepare:examples:web && pnpm prepare:examples:native",
    "examples:web": "cd examples/web-vite-app && pnpm run dev",
    "examples:native": "cd examples/native-expo-app && pnpm start",
    "examples:typecheck": "pnpm typecheck:examples"
  },
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client/index.ts",
    "./native": "./src/native/index.ts",
    "./types": "./src/types/index.ts",
    "./react": "./src/react.ts"
  },
  "keywords": [
    "opengame",
    "store-bridge",
    "store",
    "state-management",
    "webview",
    "react-native",
    "state-sync",
    "json-patch"
  ],
  "author": "OpenGame System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-game-system/store-bridge.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@types/use-sync-external-store": "^0.0.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^9.22.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vite": "^5.2.4",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "fast-json-patch": "^3.1.1",
    "react": ">=16.8.0",
    "react-dom": "^19.0.0",
    "use-sync-external-store": "^1.4.0",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
