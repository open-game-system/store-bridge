{
  "name": "@open-game-system/store-bridge",
  "version": "1.20250330.1",
  "description": "A universal bridge for web games and the OpenGame App.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "dev": "tsc -w -p tsconfig.esm.json",
    "format": "biome format . --write",
    "lint": "biome check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./client": {
      "types": "./dist/types/client/index.d.ts",
      "import": "./dist/esm/client/index.js",
      "require": "./dist/cjs/client/index.js",
      "default": "./dist/esm/client/index.js"
    },
    "./native": {
      "types": "./dist/types/native/index.d.ts",
      "import": "./dist/esm/native/index.js",
      "require": "./dist/cjs/native/index.js",
      "default": "./dist/esm/native/index.js"
    },
    "./react": {
      "types": "./dist/types/react/index.d.ts",
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js",
      "default": "./dist/esm/react/index.js"
    },
    "./testing": {
      "types": "./dist/types/testing/index.d.ts",
      "import": "./dist/esm/testing/index.js",
      "require": "./dist/cjs/testing/index.js",
      "default": "./dist/esm/testing/index.js"
    },
    "./utils": {
      "types": "./dist/types/utils/index.d.ts",
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js",
      "default": "./dist/esm/utils/index.js"
    },
    "./types": {
      "types": "./dist/types/types/index.d.ts",
      "import": "./dist/esm/types/index.js",
      "require": "./dist/cjs/types/index.js",
      "default": "./dist/esm/types/index.js"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "vitest": "^3.0.9"
  },
  "keywords": [
    "bridge",
    "store",
    "state",
    "webview",
    "game",
    "react",
    "react-native"
  ],
  "author": "OpenGame System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-game-system/store-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/open-game-system/store-bridge/issues"
  },
  "homepage": "https://github.com/open-game-system/store-bridge#readme",
  "dependencies": {
    "fast-json-patch": "^3.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
